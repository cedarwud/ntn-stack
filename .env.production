# 生產環境配置
ENVIRONMENT=production
LOG_LEVEL=INFO

# API 配置
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=2
API_TIMEOUT=30

# 數據庫配置
POSTGRES_DB=netstack_db
POSTGRES_USER=netstack_user
POSTGRES_PASSWORD=netstack_password
POSTGRES_HOST=netstack-postgres
POSTGRES_PORT=5432

MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_DB=open5gs

REDIS_HOST=redis
REDIS_PORT=6379

# 衛星數據配置
SATELLITE_DATA_MODE=instant_load
PRECOMPUTE_ON_STARTUP=true
ORBIT_CACHE_PRELOAD=true

# 安全配置
SECRET_KEY=production_secret_key_change_me

# 性能配置
MAX_REQUEST_SIZE=10485760
WORKER_CONNECTIONS=1000