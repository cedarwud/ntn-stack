# ./backend/.env (範例)

# PostgreSQL 配置
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=your_db_name
POSTGRES_PORT=5432 # 如果你想改變映射到主機的端口

# GPU 配置 (根據需要設定)
# CUDA_VISIBLE_DEVICES=0 # 指定使用 GPU 0
# CUDA_VISIBLE_DEVICES=-1 # 強制使用 CPU
# CUDA_VISIBLE_DEVICES= # 讓 TensorFlow/Sionna 自動檢測 (預設行為)

# TF Log Level (可選)
# TF_CPP_MIN_LOG_LEVEL=3

# ================================
# 衛星系統配置
# ================================

# 觀測者位置配置 (臺北大學座標: 24°56'38"N, 121°22'15"E)
OBSERVER_LAT=24.943889
OBSERVER_LON=121.370833
OBSERVER_ALT=0.0

# TLE數據源配置
SPACETRACK_USERNAME=your_spacetrack_username
SPACETRACK_PASSWORD=your_spacetrack_password
CELESTRAK_BASE_URL=https://celestrak.org/NORAD/elements/gp.php
TLE_UPDATE_INTERVAL=3600
TLE_DATA_SOURCE=celestrak

# OneWeb衛星星座配置
ONEWEB_CONSTELLATION_SIZE=648
ONEWEB_ORBITAL_PLANES=18
ONEWEB_SATELLITES_PER_PLANE=36
ONEWEB_ALTITUDE_KM=1200
ONEWEB_INCLINATION_DEG=87.4
ONEWEB_PERIOD_MINUTES=109

# 軌道計算配置
ORBIT_CALCULATION_STEP_SECONDS=60
ORBIT_PREDICTION_HOURS=24
MIN_ELEVATION_ANGLE_DEG=10.0
MAX_ORBIT_ALTITUDE_KM=2000
EARTH_RADIUS_KM=6371.0

# 衛星可視化配置
MAX_VISIBLE_SATELLITES=100
SATELLITE_SCALE=3.0
MIN_SAT_HEIGHT=0
MAX_SAT_HEIGHT=300
GLB_SCENE_SIZE=1200

# 性能優化配置
SATELLITE_CACHE_TTL_SECONDS=300
MAX_CONCURRENT_ORBIT_CALCULATIONS=5
REDIS_SATELLITE_DATA_TTL=1800
BATCH_SATELLITE_PROCESSING_SIZE=20

# 頻段配置 (OneWeb Ka/Ku頻段)
ONEWEB_KA_UPLINK_START_GHZ=27.5
ONEWEB_KA_UPLINK_END_GHZ=30.0
ONEWEB_KA_DOWNLINK_START_GHZ=17.8
ONEWEB_KA_DOWNLINK_END_GHZ=20.2
ONEWEB_KU_START_GHZ=10.7
ONEWEB_KU_END_GHZ=12.7

# 錯誤處理和重試配置
TLE_FETCH_RETRY_ATTEMPTS=3
TLE_FETCH_RETRY_DELAY_SECONDS=5
ORBIT_CALCULATION_TIMEOUT_SECONDS=30
API_REQUEST_TIMEOUT_SECONDS=10

# 日誌和監控配置
SATELLITE_LOG_LEVEL=INFO
ENABLE_ORBIT_CALCULATION_METRICS=true
ENABLE_TLE_UPDATE_LOGGING=true
SKYFIELD_DATA_PATH=/tmp/skyfield-data

# 衛星通行計算配置
SATELLITE_PASS_MIN_DURATION_SECONDS=60
SATELLITE_PASS_MAX_ELEVATION_FILTER=true
SATELLITE_PASS_PREDICTION_DAYS=7

# 錯誤處理和降級策略配置
ENABLE_ERROR_FALLBACK=true
ENABLE_CIRCUIT_BREAKER=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_SECONDS=60
ERROR_RETRY_MAX_ATTEMPTS=3
ERROR_RETRY_DELAY_SECONDS=2

# 緩存配置
ENABLE_LOCAL_CACHE=true
ENABLE_REDIS_CACHE=true
LOCAL_CACHE_TTL_SECONDS=60
MAX_LOCAL_CACHE_SIZE=1000

# 開發和測試配置
ENABLE_SATELLITE_SIMULATION_MODE=false
USE_CACHED_TLE_DATA_ON_FAILURE=true
ENABLE_SATELLITE_DATA_VALIDATION=true
MOCK_SATELLITE_DATA_FOR_TESTING=false