# LEO衛星換手決策RL系統 - 環境變量配置
# Phase 1: PostgreSQL 真實數據庫配置

# 數據庫連接配置
DATABASE_URL=postgresql://rl_user:rl_password@localhost:5432/rl_research_db

# PostgreSQL 服務器配置
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=rl_user
POSTGRES_PASSWORD=rl_password
POSTGRES_DATABASE=rl_research_db

# PostgreSQL 管理員配置（用於初始化）
POSTGRES_ADMIN_USER=postgres
POSTGRES_ADMIN_PASSWORD=postgres

# 應用程式環境
ENV=development

# 日誌配置
LOG_LEVEL=INFO

# API 配置
API_HOST=0.0.0.0
API_PORT=8000

# 訓練配置
MAX_CONCURRENT_TRAINING=3
DEFAULT_TRAINING_EPISODES=100
DEFAULT_STEP_TIME=0.1

# 研究配置
DEFAULT_RESEARCHER_ID=system
ENABLE_RESEARCH_LOGGING=true
ENABLE_PERFORMANCE_TRACKING=true