# 開發環境配置
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# API 配置 
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=1
API_TIMEOUT=60

# 數據庫配置 (使用相同的容器，但不同的設定)
POSTGRES_DB=netstack_dev_db
POSTGRES_USER=netstack_user
POSTGRES_PASSWORD=dev_password
POSTGRES_HOST=netstack-postgres
POSTGRES_PORT=5432

MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_DB=open5gs_dev

REDIS_HOST=redis  
REDIS_PORT=6379

# 衛星數據配置 (開發優化)
SATELLITE_DATA_MODE=simple_load
PRECOMPUTE_ON_STARTUP=false
ORBIT_CACHE_PRELOAD=false

# 安全配置 (開發用)
SECRET_KEY=development_secret_key_not_secure

# 開發特定配置
DEBUG=true
RELOAD=true
MAX_REQUEST_SIZE=52428800  # 50MB for development

# 開發工具
INSTALL_DEV_TOOLS=true